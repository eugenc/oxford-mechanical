{
  "name": "oxfordmechanical-theme",
  "version": "1.0.0",
  "brand": {
    "name": "Oxford Mechanical",
    "description": "Commercial plumbing for high-rise condos, offices, schools, and public buildings."
  },
  "colors": {
    "primary": {
      "50": "#eff6ff",
      "100": "#dbeafe",
      "200": "#bfdbfe",
      "300": "#93c5fd",
      "400": "#60a5fa",
      "500": "#3b82f6",
      "600": "#2563eb",
      "700": "#1d4ed8",
      "800": "#1e40af",
      "900": "#1e3a8a"
    },
    "secondary": {
      "50": "#fff7ed",
      "100": "#ffedd5",
      "200": "#fed7aa",
      "300": "#fdba74",
      "400": "#fb923c",
      "500": "#f97316",
      "600": "#ea580c",
      "700": "#c2410c",
      "800": "#9a3412",
      "900": "#7c2d12"
    },
    "accent": {
      "50": "#fefce8",
      "100": "#fef9c3",
      "200": "#fef08a",
      "300": "#fde047",
      "400": "#facc15",
      "500": "#eab308",
      "600": "#ca8a04",
      "700": "#a16207",
      "800": "#854d0e",
      "900": "#713f12"
    },
    "neutral": {
      "0": "#ffffff",
      "50": "#f8fafc",
      "100": "#f1f5f9",
      "200": "#e2e8f0",
      "300": "#cbd5e1",
      "400": "#94a3b8",
      "500": "#64748b",
      "600": "#475569",
      "700": "#334155",
      "800": "#1f2937",
      "900": "#0f172a",
      "1000": "#0b1220"
    },
    "success": {
      "500": "#16a34a"
    },
    "warning": {
      "500": "#f59e0b"
    },
    "error": {
      "500": "#ef4444"
    },
    "info": {
      "500": "#0ea5e9"
    }
  },
  "typography": {
    "fontFamily": {
      "display": [
        "Poppins",
        "Inter",
        "ui-sans-serif",
        "system-ui",
        "sans-serif"
      ],
      "body": [
        "Inter",
        "ui-sans-serif",
        "system-ui",
        "sans-serif"
      ],
      "mono": [
        "ui-monospace",
        "SFMono-Regular",
        "Menlo",
        "monospace"
      ]
    },
    "scale": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "lineHeight": {
      "tight": 1.15,
      "snug": 1.25,
      "normal": 1.5,
      "relaxed": 1.7
    }
  },
  "radii": {
    "none": "0px",
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "xl": "16px",
    "2xl": "24px",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px rgba(0,0,0,0.06)",
    "md": "0 4px 12px rgba(0,0,0,0.10)",
    "lg": "0 10px 24px rgba(0,0,0,0.12)"
  },
  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "12px",
    "lg": "16px",
    "xl": "24px",
    "2xl": "32px",
    "3xl": "48px",
    "4xl": "64px"
  },
  "containers": {
    "narrow": "720px",
    "default": "1024px",
    "wide": "1280px",
    "xl": "1440px"
  },
  "components": {
    "button": {
      "primary": {
        "bg": "colors.primary.600",
        "text": "colors.neutral.0",
        "hoverBg": "colors.primary.700",
        "ring": "colors.primary.300",
        "radius": "radii.lg",
        "paddingY": "spacing.md",
        "paddingX": "spacing.xl"
      },
      "secondary": {
        "bg": "colors.neutral.100",
        "text": "colors.neutral.800",
        "hoverBg": "colors.neutral.200",
        "ring": "colors.neutral.300",
        "radius": "radii.lg",
        "paddingY": "spacing.md",
        "paddingX": "spacing.xl"
      },
      "ghost": {
        "bg": "transparent",
        "text": "colors.primary.700",
        "hoverBg": "colors.primary.50",
        "radius": "radii.lg",
        "paddingY": "spacing.md",
        "paddingX": "spacing.xl"
      }
    },
    "card": {
      "bg": "colors.neutral.0",
      "border": "colors.neutral.200",
      "radius": "radii.xl",
      "shadow": "shadows.md",
      "padding": "spacing.xl",
      "headingColor": "colors.neutral.900",
      "textColor": "colors.neutral.700"
    },
    "hero": {
      "bg": "linear-gradient(180deg, rgba(15,23,42,0.9) 0%, rgba(15,23,42,0.7) 100%)",
      "titleColor": "colors.neutral.0",
      "subtitleColor": "colors.neutral.100",
      "ctaPrimary": "button.primary",
      "ctaSecondary": "button.secondary"
    },
    "section": {
      "bg": "colors.neutral.50",
      "titleColor": "colors.neutral.900",
      "subtitleColor": "colors.neutral.600",
      "paddingY": "spacing.4xl"
    },
    "alert": {
      "success": {
        "bg": "rgba(22,163,74,0.1)",
        "text": "colors.success.500",
        "border": "colors.success.500"
      },
      "warning": {
        "bg": "rgba(245,158,11,0.1)",
        "text": "colors.warning.500",
        "border": "colors.warning.500"
      },
      "error": {
        "bg": "rgba(239,68,68,0.1)",
        "text": "colors.error.500",
        "border": "colors.error.500"
      }
    }
  },
  "elevation": {
    "navbar": {
      "bg": "rgba(255,255,255,0.9)",
      "backdropBlur": "8px",
      "border": "colors.neutral.200"
    },
    "footer": {
      "bg": "colors.neutral.900",
      "text": "colors.neutral.100",
      "link": "colors.neutral.0"
    }
  }
}