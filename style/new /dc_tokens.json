{
  "name": "dedicatedcomputing-theme",
  "version": "1.0.0",
  "brand": {
    "name": "Dedicated Computing",
    "description": "Embedded systems, control, data/image processing, hardware/software integration."
  },
  "colors": {
    "primary": {
      "50": "#f0f5ff",
      "100": "#dce4ff",
      "200": "#aabaff",
      "300": "#7790ff",
      "400": "#4c64ff",
      "500": "#0037ff",
      "600": "#002edb",
      "700": "#0026b7",
      "800": "#001e8f",
      "900": "#001370"
    },
    "secondary": {
      "50": "#fdf7f0",
      "100": "#fbe8d7",
      "200": "#f6caab",
      "300": "#f0a97c",
      "400": "#e87a40",
      "500": "#dc5608",
      "600": "#b54606",
      "700": "#8b3505",
      "800": "#5f2403",
      "900": "#391501"
    },
    "accent": {
      "50": "#f9fcfa",
      "100": "#f2f7f3",
      "200": "#e4f0e7",
      "300": "#d3e7d7",
      "400": "#bcd8be",
      "500": "#9cc59e",
      "600": "#799c7d",
      "700": "#56755d",
      "800": "#35493a",
      "900": "#19261f"
    },
    "neutral": {
      "0": "#ffffff",
      "50": "#fafbfc",
      "100": "#f4f5f6",
      "200": "#e7e9eb",
      "300": "#cfd3d9",
      "400": "#a9b1bc",
      "500": "#768194",
      "600": "#50596d",
      "700": "#343b4d",
      "800": "#1f2433",
      "900": "#0b0e1c"
    },
    "success": {
      "500": "#16a34a"
    },
    "warning": {
      "500": "#f59e0b"
    },
    "error": {
      "500": "#ef4444"
    },
    "info": {
      "500": "#0ea5e9"
    }
  },
  "typography": {
    "fontFamily": {
      "display": [
        "Inter",
        "ui-sans-serif",
        "system-ui",
        "sans-serif"
      ],
      "body": [
        "Inter",
        "ui-sans-serif",
        "system-ui",
        "sans-serif"
      ],
      "mono": [
        "ui-monospace",
        "SFMono-Regular",
        "Menlo",
        "monospace"
      ]
    },
    "scale": {
      "xs": "0.75rem",
      "sm": "0.875rem",
      "base": "1rem",
      "lg": "1.125rem",
      "xl": "1.25rem",
      "2xl": "1.5rem",
      "3xl": "1.875rem",
      "4xl": "2.25rem",
      "5xl": "3rem"
    },
    "lineHeight": {
      "tight": 1.15,
      "snug": 1.25,
      "normal": 1.5,
      "relaxed": 1.7
    }
  },
  "radii": {
    "none": "0px",
    "sm": "4px",
    "md": "8px",
    "lg": "12px",
    "xl": "16px",
    "2xl": "24px",
    "full": "9999px"
  },
  "shadows": {
    "sm": "0 1px 2px rgba(0,0,0,0.06)",
    "md": "0 4px 12px rgba(0,0,0,0.10)",
    "lg": "0 10px 24px rgba(0,0,0,0.12)"
  },
  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "12px",
    "lg": "16px",
    "xl": "24px",
    "2xl": "32px",
    "3xl": "48px",
    "4xl": "64px"
  },
  "containers": {
    "narrow": "720px",
    "default": "1024px",
    "wide": "1280px",
    "xl": "1440px"
  },
  "components": {
    "button": {
      "primary": {
        "bg": "colors.primary.500",
        "text": "colors.neutral.0",
        "hoverBg": "colors.primary.600",
        "ring": "colors.primary.300",
        "radius": "radii.md",
        "paddingY": "spacing.md",
        "paddingX": "spacing.lg"
      },
      "secondary": {
        "bg": "colors.neutral.100",
        "text": "colors.neutral.800",
        "hoverBg": "colors.neutral.200",
        "ring": "colors.neutral.300",
        "radius": "radii.md",
        "paddingY": "spacing.md",
        "paddingX": "spacing.lg"
      },
      "ghost": {
        "bg": "transparent",
        "text": "colors.primary.500",
        "hoverBg": "colors.primary.50",
        "radius": "radii.md",
        "paddingY": "spacing.md",
        "paddingX": "spacing.lg"
      }
    },
    "card": {
      "bg": "colors.neutral.0",
      "border": "colors.neutral.200",
      "radius": "radii.xl",
      "shadow": "shadows.md",
      "padding": "spacing.lg",
      "headingColor": "colors.neutral.900",
      "textColor": "colors.neutral.700"
    },
    "hero": {
      "bg": "linear-gradient(180deg, rgba(11,14,28,0.9) 0%, rgba(11,14,28,0.7) 100%)",
      "titleColor": "colors.neutral.0",
      "subtitleColor": "colors.neutral.50",
      "ctaPrimary": "button.primary",
      "ctaSecondary": "button.secondary"
    },
    "section": {
      "bg": "colors.neutral.50",
      "titleColor": "colors.neutral.900",
      "subtitleColor": "colors.neutral.600",
      "paddingY": "spacing.4xl"
    },
    "alert": {
      "success": {
        "bg": "rgba(22,163,74,0.1)",
        "text": "colors.success.500",
        "border": "colors.success.500"
      },
      "warning": {
        "bg": "rgba(245,158,11,0.1)",
        "text": "colors.warning.500",
        "border": "colors.warning.500"
      },
      "error": {
        "bg": "rgba(239,68,68,0.1)",
        "text": "colors.error.500",
        "border": "colors.error.500"
      }
    }
  },
  "elevation": {
    "navbar": {
      "bg": "rgba(255,255,255,0.9)",
      "backdropBlur": "8px",
      "border": "colors.neutral.200"
    },
    "footer": {
      "bg": "colors.neutral.900",
      "text": "colors.neutral.50",
      "link": "colors.neutral.100"
    }
  }
}